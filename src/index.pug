doctype html
- const sprites = require('@images/icons_sprite.svg')
include components/components

html
  head
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(rel='stylesheet', href=require('main.scss'))
    title Dell products 
    script(src=require('assets/js/burger.js') defer)
    script(src=require('components/swiper/swiper.js') defer)
  body
    header.header
      .container
        .header__inner
          a(href='/')
            img.header__logo(src=require('@images/logo.png') alt='Logo image')
          nav.menu(data-menu-state='closed')
            ul.menu__inner 
              +menu-item('Главная')
              +menu-item('Каталог', '#catalogue')
              +menu-item('Новости')
              +menu-item('Наш АСЦ')
              +menu-item('Контакты')
          svg.icon.header__search: use(href=`${sprites}#search`)
          .header__buttons 
            +roundButton('profile', _, _, true)
              menu.profile 
                .profile__header
                  .round-button
                    svg.icon: use(href=`${sprites}#profile`)
                  p.profile__text Мария 
                .profile__item: a.profile__text(href='/') Личный кабинет
                .profile__item: a.profile__text(href='/') История заказов
                .profile__item: a.profile__text(href='/') Персональные предложения
                .profile__item: a.profile__text(href='/') Выйти
            +roundButton('signal', 'desktop')
            +roundButton('favourite', 'desktop')
            +roundButton('shoppingbag', _, 3)
            +roundButton('burger', 'mobile')(data-burger)

    #main.slider
      .swiper
        .swiper-wrapper
          .swiper-slide
            .content.content_background.content_dark
              .container
                .background-text.slider__background-text DELL
            .content
              .container.container_relative
                .details.slider__details
                  .details__description Новое поступление
                  .details__title
                    p Лучшие товары 
                    p от компании Dell
                  .details__follow
                    +go-button("Подробнее", '/')
                img.slider__image-overlay(src=require('@images/laptop.png') alt='Laptop in background')
          .swiper-slide 
            section(style={
              background: 'var(--background-primary)', 
              height: '100%',
              display: 'flex', 
              'align-items': 'center',
              'justify-content': 'center'
              }) Slide 2
          .swiper-slide
            section(style={
              background: 'var(--background-primary)', 
              height: '100%',
              display: 'flex', 
              'align-items': 'center',
              'justify-content': 'center'
              }) Slide 3
      .content 
        .container
          .scroll-to.slider__control
            p.scroll-to__text Scroll to catalog
            svg.scroll-to__icon: use(href=`${sprites}#mouse`)

      .slider__side
        .content
          .slider__text
            p Выгодное 
            p предложение 
            p от Dell
        .content
          +image('laptop_1')(alt='Best offer image', class='slider__image')
        
        .slider__control.slider__control_group
          .swiper-pagination.slider__pagination
          include assets/images/next.svg
    
    #catalogue.catalogue
      .container
        .catalogue__inner
          .details.catalogue__details
            .details__title.details__title_dense.catalogue__details-title
              | Каталог товаров от Dell
            .details__description.catalogue__details-description
              | Наша компания является
              | зарегистрированным и официальным
              | партнёром Dell в России
            .details__follow
              +go-button('В каталог')
          .catalogue__card 
            .catalogue__number 01
            +image('catalogue_01')(alt='Laptops', class='catalogue__image catalogue__image_1')
            .catalogue__amount 105 товаров
            .catalogue__title Ноутбуки
          
          .catalogue__card 
            .catalogue__number 02
            +image('catalogue_02')(alt='PCs', class='catalogue__image catalogue__image_2')
            .catalogue__amount 65 товаров
            .catalogue__title Персональные компьютеры
            
          .catalogue__card 
            .catalogue__number 03
            +image('catalogue_03')(alt='Servers', class='catalogue__image catalogue__image_3')
            .catalogue__amount 13 товаров
            .catalogue__title Серверы
            
          .catalogue__card 
            .catalogue__number 04
            +image('catalogue_04')(alt='EMC', class='catalogue__image catalogue__image_4')
            .catalogue__amount 2345 товаров
            .catalogue__title Dell EMC
            
          .catalogue__card 
            .catalogue__number 05
            +image('catalogue_05')(alt='EMC parts', class='catalogue__image catalogue__image_5')
            .catalogue__amount 195 товаров
            .catalogue__title Запасные части к Dell EMC
    
    #advantages.advantages
      .container.container_wide
        .details.advantages__details
          .details__title
            | Наши преимущества
          .details__description
            | Оптимизация мощностей (расходов, социальных выплат и т.п.) 
            | позволили компании на 4,7% понизить цены по сравнению с конкурентами
          .details__follow
            +go-button('Оставить заявку', '/')
      .content
        .container.container_wide
          .advantages__inner
            include assets/images/best_quality.svg
            +image('advantages')(alt="Best quality laptop", class='advantages__image')
      .container
        .advantages__cards
          .advantages__card
            .advantages__icon-box: svg.advantages__icon: use(href=`${sprites}#card`)
            .advantages__title
              p Самые выгодные
              p и низкие цены
            .advantages__description 
              p В наличии широкий ассортимент, 
              p а также доступные цены
              p на ноутбуки Dell
            include assets/images/corner.svg
          
          .advantages__card
            .advantages__icon-box: svg.advantages__icon: use(href=`${sprites}#certified`)
            .advantages__title
              p Авторизованный сервисный
              p центр DELL
            .advantages__description
              p Сертифицированный сервисный 
              p центр по ремонту техники Dell 
              p в России и странах СНГ
            include assets/images/corner.svg

          .advantages__card
            .advantages__icon-box: svg.advantages__icon: use(href=`${sprites}#group`)
            .advantages__title 
              p Высокий уровень 
              p технической экспертизы
            .advantages__description 
              p Мы прошли аттестацию в виде 
              p тестирования, где показали
              p высокий уровень знаний
            include assets/images/corner.svg

          .advantages__card
            .advantages__icon-box: svg.advantages__icon: use(href=`${sprites}#package`)
            .advantages__title 
              p Официальный партнер 
              p DELL
            .advantages__description 
              p Официальный поставщик 
              p продукции DELL в России
              p и странах СНГ
            include assets/images/corner.svg

