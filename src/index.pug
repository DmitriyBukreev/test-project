    #contacts.contacts
      .container.container_wide.container_desktop
        include assets/images/our_contacts.svg
      
      .content
        .container.container_mobile
          .contacts__card
            .contacts__section.contacts__section_about
              p.contacts__title Наши контакты
              p.contacts__hint Вы можете связаться с нашим онлайн-консультантом
              
              .contacts__items
                .contact-item
                  .contact-item__wrapper
                    svg.contact-item__icon-container: use(href=`${sprites}#address`)
                    .contact-item__details
                      p.contact-item__title Адрес
                      p.contact-item__value Москва, ул. 3-я Хорошевская, дом 2, строение 1
                
                .contact-item
                  .contact-item__wrapper
                    svg.contact-item__icon-container: use(href=`${sprites}#email`)
                    .contact-item__details
                      p.contact-item__title E-mail
                      p.contact-item__value dell_ru@gmail.com

                .contact-item
                  .contact-item__wrapper
                    svg.contact-item__icon-container: use(href=`${sprites}#phone`)
                    .contact-item__details
                      p.contact-item__title Телефон
                      .contact-item__value
                        p +7 495 737-06-01
                        p +7 495 737-06-01
              .contacts__socials
                svg.contacts__socials-item: use(href=`${sprites}#facebook`)
                svg.contacts__socials-item: use(href=`${sprites}#whatsapp`)
              +image('iphone')(class='contacts__image' alt="Tilted phone image")
            .contacts__section.contacts__section_form
              p.contacts__title.contacts__title_dark Оставьте заявку
              p.contacts__hint Оставьте свой номер, и мы перезвоним Вам.
              form.contacts__form(action='/')
                
                  .input
                    label.input__label Ваше имя
                    input.input__element(type="text", required)
                  .input
                    label.input__label Номер телефона
                    input.input__element(type="tel", required)
                  .input
                    label.input__label Комментарий
                    textarea.input__element(rows="3")
                  +go-button("Заказать", _, 'go-button__label_dark')

    footer.footer 
      .container
        .footer__nav
          a.footer__logo(href='/')
            img(src=require('@images/logo.png') alt='Logo image')
          .footer__category.footer__category_catalogue
            | Каталог
            .footer__links.footer__links_catalogue
              a.footer__link(href='/') Ноутбуки
              a.footer__link(href='/') Персональные компьютеры
              a.footer__link(href='/') Серверы
              a.footer__link(href='/') Dell EMC
              a.footer__link(href='/') Запасные части к Dell EMC

          .footer__category.footer__category_profile
            | Личный кабинет
            .footer__links
              a.footer__link(href='/') Профиль
              a.footer__link(href='/') История заказов
              a.footer__link(href='/') SMS-уведомления
              a.footer__link(href='/') Избранное
              a.footer__link(href='/') Сравнение товаров
          
          .footer__category.footer__category_help
            | Помощь
            .footer__links
              a.footer__link(href='/') Доставка и оплата
              a.footer__link(href='/') Контакты
              a.footer__link(href='/') FAQ
              a.footer__link(href='/') Наш АСЦ
        
        .footer__contacts
          .footer__contact-item
            .footer__contact-title Адрес 
            .footer__contact-value Москва, ул. 3-я Хорошевская, дом 2, строение 1
          .footer__contact-item
            .footer__contact-title Телефон 
            .footer__contact-value +7 495 737-06-01, +7 495 737-06-01
          .footer__contact-item
            .footer__contact-title E-mail 
            .footer__contact-value dell_ru@gmail.com
          .footer__socials
            svg.footer__socials-item: use(href=`${sprites}#facebook`)
            svg.footer__socials-item: use(href=`${sprites}#whatsapp`)

      .container.container_wide
        .footer__background-text DELL